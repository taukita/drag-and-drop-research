<UserControl x:Class="DragAndDropResearch.Controls.PieceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DragAndDropResearch.Controls"
             xmlns:viewModels="clr-namespace:DragAndDropResearch.ViewModels"
             xmlns:converters="clr-namespace:DragAndDropResearch.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             d:DataContext="{d:DesignInstance Type=viewModels:PieceViewModel, IsDesignTimeCreatable=False}">
    <Image Source="{Binding Impl, Converter={converters:PieceImplConverter}}"/>
</UserControl>
